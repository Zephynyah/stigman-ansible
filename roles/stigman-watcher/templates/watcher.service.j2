{{ ansible_managed | comment }}
[Unit]
Description=STIG Manager Watcher
After=network.target

[Service]
Type=simple
LimitNOFILE=102642
AmbientCapabilities=CAP_SYS_ADMIN
#AmbientCapabilities=CAP_NET_BIND_SERVICE

#WorkingDirectory=/opt/stig-manager # todo: sysmlink
WorkingDirectory={{ watcher.home }}
ExecStart=/bin/bash -c "./watcher-watcher-linuxstatic"
#User={{ watcher.service_user }}
#Group={{ watcher.service_group }}

{% if stigman_watcher_service_restart_always %}
Restart=always
{% elif stigman_watcher_service_restart_on_failure %}
Restart=on-failure
{% endif %}
RestartSec={{ stigman_watcher_service_restartsec }}
SuccessExitStatus=0
TimeoutStartSec=60s
TimeoutStopSec=60s

[Install]
WantedBy=multi-user.target
